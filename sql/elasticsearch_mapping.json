{
  "index_patterns": ["bus-locations*"],
  "priority": 1,
  "template": {
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 0,
      "refresh_interval": "5s"
    },
    "mappings": {
      "properties": {
        "bus_id": {
          "type": "keyword"
        },
        "route": {
          "type": "keyword"
        },
        "timestamp": {
          "type": "date",
          "format": "strict_date_optional_time||epoch_millis"
        },
        "lat": {
          "type": "double"
        },
        "lon": {
          "type": "double"
        },
        "speed_kmh": {
          "type": "float"
        },
        "location": {
          "type": "geo_point"
        }
      }
    }
  }
}